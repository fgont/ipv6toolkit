	elsif($chos =~ m/bsd/i){
		$chos="bsd";
	}
	else{
		print "Your OS is not supported for this function\n";
	}


	if($ARGV[0] eq "get-bing4-dict-batch"){
		print "Cannot specify source address for IPv4\n";
		exit;
	}
	elsif($ARGV[0] eq "get-bing6-dict-batch"){
		$ipprotocol=6;
	}
	else{
		# XXX: FOrce IPv6
		$ipprotocol=6;
	}
	ParseConfigFile();

	$SIG{INT} = \&SigIntHandler;

	if(!$changeinsane){
		$gotaddress=AddAddress($changeaddr[0], $chaddr, $chpref, $chos);
	}

	while(<STDIN>){


		undef @domain;

		if($_ =~ m/^\s*\.*([-a-zA-Z0-9.]+)/){
			$czone= $1;
		}
		else{
			next;
		}

		$czone= join ".", split /\./, $czone;

		print "######## DOMAIN: $czone ########\n";


		open my $dictfp, '<', $dictfile or die $!;

		if($changeinsane){
			$gotaddress=AddAddress($changeaddr[0], $chaddr, $chpref, $chos);
		}

		GetDomainsFromBingDict(\@domain, $czone, 0, $maxresults, $dictfp, $ipprotocol, $gotaddress);	

		if($changeinsane){
			DelAddress($changeaddr[0], $gotaddress, $chpref, $chos);
		}

		close $dictfp;

		#print "#### IMPORTANT: WILL NOW SEARCH FOR DOMAINS WITHIN SPECIFIC SUBDOMAINS\n";
		undef @remsites;
		undef @levsites;
		$continue=1;

		$domlevel=1;
		GenDomListLevel(\@domain, \@levsites, $czone, $domlevel, -1);


		while($#levsites >= 0 && $continue == 1){
			#print "#### LEVEL: $domlevel, TOTAL: $#levsites\n\n#LIST:\n";

			for($jj= 0; $jj <= $#levsites && $continue == 1; $jj++){
				$newczone= $levsites[$jj];

				#	open FILE, "$dictfile" or die $!;
				open my $dictfp, '<', $dictfile or die $!;

				if($changeinsane){
					$gotaddress=AddAddress($changeaddr[0], $chaddr, $chpref, $chos);
				}

				GetDomainsFromBingDict(\@domain, $newczone, $domlevel, $maxresults, $dictfp, $ipprotocol, $gotaddress);

				if($changeinsane){
					DelAddress($changeaddr[0], $gotaddress, $chpref, $chos);
				}

				if($maxresults >= 0 && $#domain>=$maxresults){
					$continue=0;
				}
				else{
					$continue=1;
				}

				close $dictfp;
			}

			$domlevel++;
			undef @levsites;
			GenDomListLevel(\@domain, \@levsites, $czone, $domlevel, -1);
		}  # While lev > 0;
	};  # while(<STDIN>)

	if(!$changeinsane){
		DelAddress($changeaddr[0], $gotaddress, $chpref, $chos);
	}


	exit;
}
