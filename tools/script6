	open FILE, "$dns_ukgov_database" or die $!;

	$line=<FILE>;

	if($line !~ m/﻿Domain Name,Owner,Representing/){
		print "Bad format in UK GOV zonefile $dns_ukgov_database\n";
		exit(1);
